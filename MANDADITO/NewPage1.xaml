<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MANDADITO.NewPage1"
             BackgroundColor="#E5E5E5">
    <VerticalStackLayout HorizontalOptions="Center" VerticalOptions="Center">
        <StackLayout Orientation="Horizontal" HorizontalOptions="Fill" BackgroundColor="#1E4BA1" Padding="10">
            <Button Text="" BackgroundColor="Transparent" TextColor="White" 
                    Clicked="OnBackButtonClicked"/>
            <Label Text="CREA TU CUENTA" FontSize="24" HorizontalOptions="CenterAndExpand" TextColor="White" FontAttributes="Bold"/>
        </StackLayout>
        <Entry Placeholder="Email" Margin="20"/>
        <Entry Placeholder="Nombre completo" Margin="20"/>
        <Entry Placeholder="Username" Margin="20"/>
        <Entry Placeholder="Contraseña" IsPassword="True" Margin="20"/>
        <Entry Placeholder="Repite contraseña" IsPassword="True" Margin="20"/>
        <Button Text="Crear cuenta" BackgroundColor="#1E4BA1" TextColor="White" CornerRadius="10"
                HorizontalOptions="Center" Margin="20" Clicked="OnCreateAccountClicked"/>
    </VerticalStackLayout>
</ContentPage>
